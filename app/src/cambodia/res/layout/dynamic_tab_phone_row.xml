<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/phone_row_padding"
    android:paddingRight="@dimen/phone_row_padding">

    <org.eyeseetea.sdk.presentation.views.CustomEditText
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:background="@drawable/edit_text_bottom_border"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="?attr/font_medium"
        app:font_name="@string/condensed_font_name" />

    <org.eyeseetea.sdk.presentation.views.CustomButton
        android:id="@+id/row_phone_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.4"
        android:text="@string/ok"
        android:textSize="?attr/font_medium"
        app:font_name="@string/condensed_font_name"/>
</LinearLayout>
