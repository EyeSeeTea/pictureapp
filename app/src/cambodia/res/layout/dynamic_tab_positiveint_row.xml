<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/question_padding"
        android:paddingRight="@dimen/question_padding">

        <org.eyeseetea.malariacare.views.EditCard
            android:id="@+id/answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/edit_text_bottom_border"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="@dimen/input_number_edit_text"
            app:tDimension="@string/font_size_level2"
            app:tFontName="@string/condensed_font_name" />

        <Button
            android:id="@+id/dynamic_positiveInt_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:text="@string/ok" />

    </LinearLayout>

</TableRow>