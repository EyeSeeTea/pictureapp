<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageOptionContainer"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.5">

    <ImageView
        android:id="@+id/optionImage"
        android:layout_centerInParent="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter" />

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/optionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="155dp"
        android:gravity="center"
        android:layout_above="@+id/optionImage"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray_text_survey"
        android:textSize="?attr/font_small"
        app:font_name="@string/bold_font" />

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/optionCounterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:padding="5dip"
        android:textColor="@color/black"
        android:textSize="?attr/font_small"
        android:visibility="gone"
        app:font_name="@string/normal_font" />
</RelativeLayout>
