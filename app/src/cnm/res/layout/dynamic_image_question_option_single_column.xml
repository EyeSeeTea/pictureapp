<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageOptionContainer"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:gravity="center">

    <ImageView
        android:id="@+id/optionImage"
       android:layout_centerVertical="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"/>

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/optionText"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_toRightOf="@+id/optionImage"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_text_survey"
        android:textSize="?attr/font_small"
        app:font_name="@string/bold_font" />

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/optionCounterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:padding="5dip"
        android:textColor="@color/black"
        android:textSize="?attr/font_small"
        android:visibility="gone"
        app:font_name="@string/normal_font" />
</RelativeLayout>