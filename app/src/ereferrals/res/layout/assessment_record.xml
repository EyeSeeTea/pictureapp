<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assessment_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:weightSum="3">

            <org.eyeseetea.sdk.presentation.views.CustomTextView
                android:id="@+id/completion_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_first_color"
                android:textSize="?attr/font_small"
                android:textStyle="bold"
                app:font_name="@string/medium_font_name" />

            <org.eyeseetea.sdk.presentation.views.CustomTextView
                android:id="@+id/survey_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_first_color"
                android:textSize="?attr/font_small"
                android:textStyle="bold"
                app:font_name="@string/medium_font_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:weightSum="3">

            <org.eyeseetea.sdk.presentation.views.CustomTextView
                android:id="@+id/survey_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_first_color"
                android:textSize="?attr/font_small"
                app:font_name="@string/light_font" />

            <org.eyeseetea.sdk.presentation.views.CustomTextView
                android:id="@+id/survey_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_first_color"
                android:textSize="?attr/font_small"
                app:font_name="@string/light_font" />

            <org.eyeseetea.sdk.presentation.views.CustomTextView
                android:id="@+id/survey_program"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_first_color"
                android:textSize="?attr/font_small"
                app:font_name="@string/light_font" />

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_first_color" />
    </LinearLayout>