<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EyeSeeTheme" parent="Theme.AppCompat.Light">
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/main_window_background</item>
        <item name="logo">@drawable/pictureapp_logo</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/EyeSeeTheme.OverFlow</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_launcher</item>
    </style>

    <style name="EyeSeeTheme.OverFlow">
        <item name="android:src">@drawable/custom_dots</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">@drawable/spinner_divider</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>
</resources>