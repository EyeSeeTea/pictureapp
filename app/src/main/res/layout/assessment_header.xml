<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_header"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dashboard_row_padding">

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/header_title"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:background="@drawable/background_header"
        android:gravity="center"
        android:padding="5dip"
        android:text="@string/assessment_sent_date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/fragment_header_title_text"
        android:textSize="?attr/font_small"
        app:font_name="@string/condensed_font_name" />

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:autoText="false"
        android:background="@drawable/background_header"
        android:gravity="center"
        android:padding="5dip"
        android:text="@string/assessment_title_rdt"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/fragment_header_title_text"
        android:textSize="?attr/font_small"
        app:font_name="@string/condensed_font_name" />

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:autoText="false"
        android:background="@drawable/background_header"
        android:gravity="center"
        android:padding="5dip"
        android:text="@string/assessment_title_info"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/fragment_header_title_text"
        android:textSize="?attr/font_small"
        app:font_name="@string/condensed_font_name" />
</TableRow>