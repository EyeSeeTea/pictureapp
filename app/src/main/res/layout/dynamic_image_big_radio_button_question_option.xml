<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/question_padding"
    android:paddingRight="@dimen/question_padding">

    <include layout="@layout/bottom_view"></include>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/radio_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_size"
            android:layout_marginRight="8dp"
            android:layout_weight="0.3"
            android:scaleType="fitStart" />

        <org.eyeseetea.sdk.presentation.views.CustomRadioButton
            android:id="@+id/radio_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/rounded_background"
            android:button="@null"
            android:drawableRight="@drawable/rounded_radio_button"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingLeft="25dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:textSize="?attr/font_xsmall"
            app:font_name="@string/specific_language_font" />
    </LinearLayout>

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/counter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:lines="1"
        android:padding="5dip"
        android:textColor="@color/black"
        android:textSize="?attr/font_small"
        android:visibility="gone"
        app:font_name="@string/specific_language_font" />
</LinearLayout>