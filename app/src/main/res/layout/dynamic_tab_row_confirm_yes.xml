<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:paddingBottom="@dimen/dashboard_row_padding"
        android:paddingTop="@dimen/dashboard_row_padding"
        android:scaleType="centerInside">

        <ImageView
            android:id="@+id/confirm_yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/option_button" />

        <org.eyeseetea.sdk.presentation.views.CustomTextView
            android:id="@+id/textcard_confirm_yes"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dip"
            android:text="@android:string/yes"
            android:textColor="@color/white"
            android:textSize="?attr/font_medium"
            app:font_name="@string/specific_language_font" />
    </FrameLayout>
</LinearLayout>