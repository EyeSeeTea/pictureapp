<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingLeft="@dimen/question_padding_left"
    android:paddingRight="@dimen/question_padding_left"
    android:layout_weight="1">

    <org.eyeseetea.sdk.presentation.views.CustomTextView
        android:id="@+id/questionTextRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dip"
        android:paddingLeft="@dimen/question_padding_left"
        android:paddingRight="@dimen/question_padding_left"
        android:text="@android:string/yes"
        android:textColor="@color/white"
        android:textSize="?attr/font_medium"
        app:font_name="@string/specific_language_font" />
</TableRow>