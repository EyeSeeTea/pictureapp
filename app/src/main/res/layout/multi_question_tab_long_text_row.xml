<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="0.5"
        android:paddingLeft="@dimen/question_padding"
        android:paddingRight="@dimen/question_padding"
        >
        <include layout="@layout/row_header_item"></include>
        <org.eyeseetea.malariacare.views.EditCard
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bottom_border"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/input_number_edit_text_phone"
            android:textColor="@color/intColor"
            android:inputType="textLongMessage"
            android:imeOptions="actionDone"
            android:singleLine="true"
            app:tDimension="@string/font_size_level2"
            app:tFontName="@string/condensed_font_name"
            />
    </LinearLayout>

</TableRow>