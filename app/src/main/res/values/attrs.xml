<resources>
    <!-- TextCard: Text not editable with adaptative text size and text font-->
    <declare-styleable name="TextCard">
        <attr name="tDimension" format="string|reference" />
        <attr name="tScale" format="string|reference" />
        <attr name="tFontName" format="string|reference" />
    </declare-styleable>

    <!-- EditCard: Text field editable with adaptative text size and text font-->
    <declare-styleable name="EditCard">
        <attr name="eDimension" format="string|reference" />
        <attr name="eScale" format="string|reference" />
        <attr name="eFontName" format="string|reference" />
    </declare-styleable>

    <!-- UncheckeableRadioButton: Radiobutton with adaptative text size and text font -->
    <declare-styleable name="UncheckeableRadioButton">
        <attr name="rDimension" format="string|reference" />
        <attr name="rScale" format="string|reference" />
        <attr name="rFontName" format="string|reference" />
    </declare-styleable>

    <!-- FontCustomizableButton: Button with adaptative text size and text font-->
    <declare-styleable name="CustomButton">
        <attr name="bDimension" format="string|reference" />
        <attr name="bScale" format="string|reference" />
        <attr name="bFontName" format="string|reference" />
    </declare-styleable>
</resources>
