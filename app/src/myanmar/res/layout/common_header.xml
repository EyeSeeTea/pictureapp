<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_header"
    android:orientation="vertical"
    android:padding="@dimen/dashboard_row_padding"
    android:visibility="gone">

    <include layout="@layout/top_view"></include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <org.eyeseetea.malariacare.views.TextCard
            android:id="@+id/header_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/background_header"
            android:gravity="left|center_vertical"
            android:padding="5dip"
            android:text="@string/header_title_sent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/fragment_header_title"
            android:textSize="@dimen/header_text_size"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/condensed_font_name" />
        <!--android:textSize="@dimen/dashboard_text_size"-->
        <include layout="@layout/vertical_divisor_view"></include>

        <org.eyeseetea.malariacare.views.TextCard
            android:id="@+id/header_subtitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.5"
            android:autoText="false"
            android:background="@drawable/background_header"
            android:gravity="right|center_vertical"
            android:padding="5dip"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/fragment_header_subtitle"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/condensed_font_name" />
    </LinearLayout>

    <include layout="@layout/header_bottom_view"></include>
</LinearLayout>