<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/historic_receipt_balance_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:clipToPadding="false"/>


    <ImageButton
        android:id="@+id/historic_receipt_balance_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/footer_navigation_size"
        android:adjustViewBounds="true"
        android:background="@drawable/back_background_button"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_above="@+id/historic_receipt_balance_footer"
        android:paddingTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_button"
        android:textColor="@color/dark_purple" />

    <LinearLayout
        android:id="@+id/historic_receipt_balance_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/dark_purple">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:src="@drawable/stockselected"
            android:background="@color/myanmar_orange"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>


</RelativeLayout>