<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_content_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/medium_purple"
    android:gravity="center_horizontal">


    <org.eyeseetea.sdk.presentation.views.CustomTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/review_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/empty_string"
        android:textColor="@color/white"
        android:textSize="?attr/font_large"
        app:font_name="@string/specific_language_font" />

    <org.eyeseetea.sdk.presentation.views.CustomTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/review_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/empty_string"
        android:textColor="@color/white"
        android:textSize="?attr/font_large"
        app:font_name="@string/specific_language_font" />
</TableRow>